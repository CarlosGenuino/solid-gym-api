generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  CheckIn   CheckIn[]

  @@map("users")
}

model Gym {
  id        String    @id @default(uuid())
  title     String
  latitude  Float
  longitude Float
  phone     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  checkIns  CheckIn[]

  @@map("gyms")
}

model CheckIn {
  id        String   @id @default(uuid())
  userId    String
  gymId     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  user User @relation(fields: [userId], references: [id])
  gym  Gym  @relation(fields: [gymId], references: [id])

  @@map("check_ins")
}
